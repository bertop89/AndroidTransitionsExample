<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bertop.transitions" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SingleTransitionActivity"
            android:label="Single Transition"
            android:parentActivityName=".activities.MainActivity">
        </activity>
        <activity
            android:name=".activities.CardFlipActivity"
            android:label="Card Flip"
            android:parentActivityName=".activities.MainActivity">
        </activity>
        <activity
            android:name=".activities.ViewAnimationActivity"
            android:label="View Animation"
            android:parentActivityName=".activities.MainActivity">
        </activity>
        <activity
            android:name=".activities.ListActivity"
            android:label="List Activity"
            android:parentActivityName=".activities.MainActivity">
        </activity>
        <activity
            android:name=".activities.ActivityAnimations"
            android:label="Gallery"
            android:parentActivityName=".activities.MainActivity">
        </activity>
        <activity
            android:name=".activities.PictureDetailsActivity"
            android:label="Details"
            android:theme="@style/Transparent" >
        </activity>
        <activity
            android:name=".activities.ButtonAnimations"
            android:label="Buttons"
            android:parentActivityName=".activities.MainActivity">
        </activity>


    </application>

</manifest>
